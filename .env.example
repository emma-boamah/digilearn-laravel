# Application Environment Configuration
APP_NAME=YOUR-APP-NAME
APP_ENV=Development
APP_KEY=YOUR-APP-KEY
APP_DEBUG=true
APP_URL=http://localhost
ASSET_URL="${APP_URL}"
TRUSTED_PROXIES=*

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
PHP_CLI_SERVER_WORKERS=4

# Security Configuration
BCRYPT_ROUNDS=12
HASH_VERIFY=true

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single,security
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=sail
DB_PASSWORD=password

# Session Configuration (Fixed for HTTP)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_COOKIE_NAME=digilearn_session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax
SESSION_CONNECTION=default

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=digilearn_cache

# Queue Configuration
QUEUE_CONNECTION=database

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379
REDIS_CACHE_DB=1
REDIS_CACHE_CONNECTION=cache

# Broadcasting
BROADCAST_CONNECTION=soketi

# Broadcasting with soketi congiguration
SOKETI_APP_KEY=local
SOKETI_APP_SECRET=local
SOKETI_APP_ID=local
SOKETI_HOST=soketi
SOKETI_PORT=6001

# BROADCASTING WITH PUSHER CONFIGURATION
PUSHER_APP_ID=local
PUSHER_APP_KEY=local
PUSHER_APP_SECRET=local
PUSHER_HOST=soketi
PUSHER_PORT=6001
PUSHER_SCHEME=http
PUSHER_APP_CLUSTER=mt1
FILESYSTEM_DISK=local

# MongoDB Configuration
MONGO_PORT=27017
MONGO_HOST=mongo
MONGO_DATABASE=laravel
MONGO_USERNAME=root
MONGO_PASSWORD=password
MONGO_AUTH_DB=admin
MONGO_REPLICA_SET=rs0
MONGO_SSL=false

# Mail Configuration (Zoho ZeptoMail)
MAIL_MAILER=zeptomail
MAIL_HOST=api.zeptomail.com
# MAIL_PORT=587
# MAIL_USERNAME=emailapikey
# MAIL_PASSWORD=YOUR-ZOHO-ZEPTOMAIL-API-KEY
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@domain.com"
MAIL_FROM_NAME="${APP_NAME}"
ZEPTOMAIL_TOKEN=YOUR-ZEPTOMAIL-TOKEN
ZEPTOMAIL_REGION=com

# AWS Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Vite Pusher Configuration (for Soketi)
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Whitelisted IP ranges (comma separated CIDR)
RATE_LIMIT_WHITELISTED_IPS="192.168.0.0/16,10.0.0.0/8"

# Security Configuration
THROTTLE_LOGIN_ATTEMPTS=5
THROTTLE_SIGNUP_ATTEMPTS=5


# Standard rate limits
THROTTLE_LOGIN_IP_ATTEMPTS=5
THROTTLE_LOGIN_EMAIL_ATTEMPTS=5
THROTTLE_LOGIN_DECAY_MINUTES=15


#signup throttling
# Limit signups by IP and email to prevent abuse
THROTTLE_SIGNUP_IP_ATTEMPTS=10
THROTTLE_SIGNUP_IP_DECAY_MINUTES=60
THROTTLE_SIGNUP_EMAIL_ATTEMPTS=5
THROTTLE_SIGNUP_EMAIL_DECAY_MINUTES=1440  # 24 hours
THROTTLE_SIGNUP_DECAY_MINUTES=60

# Whitelisted rate limits (schools/businesses)
WHITELIST_LOGIN_IP_ATTEMPTS=50
WHITELIST_LOGIN_EMAIL_ATTEMPTS=20
WHITELIST_LOGIN_DECAY_MINUTES=1

WHITELIST_SIGNUP_IP_ATTEMPTS=100
WHITELIST_SIGNUP_EMAIL_ATTEMPTS=20
WHITELIST_SIGNUP_DECAY_MINUTES=1

# Security Headers
HSTS_ENABLED=false
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
CSP_ENABLED=true

# Authentication Security (EMAIL VERIFICATION DISABLED)
EMAIL_VERIFICATION_REQUIRED=false
TWO_FACTOR_ENABLED=false
PASSWORD_RESET_EXPIRE=60

# Security Logging
SECURITY_LOG_CHANNEL=security
SECURITY_LOG_LEVEL=info

# Development Settings
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# MailboxLayer Configuration
MAILBOXLAYER_API_KEY=YOUR-MAILBOXLAYER-API-KEY
MAILBOXLAYER_ENABLED=true

# Email Verification Service Configuration
EMAIL_VERIFICATION_CACHE_TTL=86400

# Google client information
GOOGLE_CLIENT_ID=YOUR-GOOGLE-CLIENT-ID
GOOGLE_CLIENT_SECRET=YOUR-GOOGLE-CLIENT-SECRET
GOOGLE_REDIRECT_URI=YOUR-GOOGLE-REDIRECT-URI

# Google Security Settings
GOOGLE_RECAPTCHA_ENABLED=false
GOOGLE_RECAPTCHA_SECRET=your_secret_key
GOOGLE_RATE_LIMIT=5 # Attempts per minute

# Youtube Api Key
YOUTUBE_API_KEY=YOUR-YOUTUBE-API-KEY



# Security Headers
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=false

# CSP Settings
CSP_ENABLED=true
CSP_REPORT_ONLY=true
CSP_REPORT_URI="/csp-reports"
CSP_UPGRADE_INSECURE=false

# Vimeo API Configuration
VIMEO_ACCESS_TOKEN=YOUR-VIMEO-ACCESS-TOKEN
VIMEO_CLIENT_ID=YOUR-VIMEO-CLIENT-ID
VIMEO_CLIENT_SECRET=YOUR-VIMEO-CLIENT-SECRET    
VIMEO_MAX_TEMP_VIDEOS=10
VIMEO_TEMP_EXPIRY_HOURS=72

# Mux API Configuration
MUX_TOKEN_ID=YOUR-MUX-TOKEN-ID
MUX_TOKEN_SECRET=YOUR-MUX-TOKEN-SECRET
MUX_WEBHOOK_SECRET=YOUR-MUX-WEBHOOK-SECRET
MUX_MAX_TEMP_VIDEOS=10
MUX_TEMP_EXPIRY_HOURS=72

PAYSTACK_SECRET_KEY=YOUR-PAYSTACK-SECRET-KEY
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here  # Replace with actual public key from Paystack dashboard
PAYSTACK_BASE_URL=https://api.paystack.co

# Add to crontab
# * * * * * cd /PATH/TO/YOUR/APP && /PATH/TO/VENDOR/BIN/SAIL artisan schedule:run >> /dev/null 2>&1
